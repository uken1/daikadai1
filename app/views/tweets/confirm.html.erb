<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<% if @tweet.content.length > 140 %>
<h2>文字数が<%= @tweet.content.length %>文字です。</h2>
<h3>文字数が上限(140文字)を超えています。</h3>
  <%= form_for(@tweet, url: new_tweet_path, method: 'get') do |f| %>
  <%= f.hidden_field :content %>
  <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-sm btn-success' %>
<% end %>
<% else %>
<h3>以下の内容で、送信する。</h3>
<%= form_for(@tweet) do |f| %>
  <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
  <%= f.hidden_field :content %>
  <!-- @tweet.contentとすることで、表示用の値を画面に出力しています。 -->
  <p>本文:<%= @tweet.content %></p>
  <%= f.submit "登録する",class: 'btn btn-primary btn-block' %>
<% end %>
  <%= form_for(@tweet, url: new_tweet_path, method: 'get') do |f| %>
  <%= f.hidden_field :content %>
  <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-sm btn-success' %>
<% end %>
<% end %>
  </div>
</div>